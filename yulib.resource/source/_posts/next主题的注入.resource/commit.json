hu.com/p/61dd40458d93)",[[1585381766017,["gc@DESKTOP-RRA9V2Q",[[-1,2630,"++"]],[2632,2632],[2630,2630]]],[1585381767996,["gc@DESKTOP-RRA9V2Q",[[-1,2592,"++"]],[2594,2594],[2592,2592]]],[1585381901806,["gc@DESKTOP-RRA9V2Q",[[1,2592,"++"]],[2592,2592],[2594,2594]]],[1585381904867,["gc@DESKTOP-RRA9V2Q",[[1,2630,"++ "]],[2630,2630],[2633,2633]]],[1585381916168,["gc@DESKTOP-RRA9V2Q",[[-1,2632," "]],[2633,2633],[2632,2632]]],[1585381918874,["gc@DESKTOP-RRA9V2Q",[[1,2632," "]],[2632,2632],[2633,2633]]],[1585381926200,["gc@DESKTOP-RRA9V2Q",[[1,2592,"  "]],[2592,2592],[2594,2594]]],[1585381930691,["gc@DESKTOP-RRA9V2Q",[[-1,2592,"  "]],[2594,2594],[2592,2592]]],[1585381931413,["gc@DESKTOP-RRA9V2Q",[[1,2592," "]],[2592,2592],[2593,2593]]]],null,"gc@DESKTOP-RRA9V2Q"]]}
